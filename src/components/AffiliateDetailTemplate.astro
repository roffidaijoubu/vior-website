---
import EventCountdown from './EventCountdown.astro';

interface Props {
  name: string;
  image: string;
  description: string;
  socialLinks: { platform: string; url: string }[];
  event?: {
    name: string;
    image: string;
    url: string;
    datetime: Date;
  };
}

const { name, image, description, socialLinks, event } = Astro.props;
---

<div class="max-w-4xl mx-auto">


  <div class="mb-8 text-center">
    <img src={image} alt={name} class="w-64 h-64 mx-auto rounded-full object-cover mb-4">
    <h1 class="text-4xl font-bold mb-2">{name}</h1>
  </div>
  {event && (
      <EventCountdown
        eventName={event.name}
        eventImage={event.image}
        eventUrl={event.url}
        eventDatetime={event.datetime}
        eventButtonLabel={event.buttonLabel}
        eventSecondaryUrl={event.secondaryUrl}
      />
  )}
  <div class="prose lg:prose-xl mx-auto mb-8">
    <p>{description}</p>
  </div>
  
  <div class="flex justify-center space-x-4 mb-8">
    {socialLinks.map(link => (
      <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-700">
        {link.platform}
      </a>
    ))}
  </div>


</div>